<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,shrink-to-fit=no" />
    <title>Avonale - @ViewBag.Title</title>

    <environment include="Development">


        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
        <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" />
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css">

        <script src="~/lib/jquery/jquery.js"></script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>



        <script src="~/js/site.js" asp-append-version="true"></script>


    </environment>

</head>
<body>
    <header class="font-avonale">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <a class="navbar-brand" href="#"> 
                <img src=@Url.Content("~/images/logoavonale.svg") width="240px" height="39px"/>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-action="Index">Meus Repositórios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-action="Pesquisar">Pesquisar Repositórios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-action="Favoritos">Favoritos</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
